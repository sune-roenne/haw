@using NYK.Collections.Extensions
@using ThousandAcreWoods.UI.Components.TextAnimation
@using ThousandAcreWoods.UI.Components.Common

<div class="row">
    @if (Block.Header != null && Block.Right != null)
    {
        <div class="col-3"></div>
        <div class="col-6" style="font-weight:800; font-size: @(CenterFont.TheFontSize)pt;">@(Block.Header)</div>
        <div class="col-3">@(Block.Right)</div>
    }
    else if (Block.Header != null)
    {
        <div class="col-12" style="font-weight:800; font-size: @(CenterFont.TheFontSize)pt;">@(Block.Header)</div>
    }
    else if (Block.Left != null && Block.Center != null && Block.Right != null)
    {
        <div class="col-2" style="font-weight:700;">@(Block.Left.ToUpper())</div>
        <div class="col-7">
            <BlockCenterLineComponent Animate="Animate" DelayPerItem="DelayPerCharacter" Font="CenterFont" Text="@Block.Center"></BlockCenterLineComponent>
        </div>
        <div class="col-3" style="font-weight:300; font-size:@(DefaultFontSettings.TheFontSize -2)pt;">@(ShowRightSide ? $"[{Block.Right}]" : "")</div>
    }
    else if (Block.Left != null && Block.Center != null)
    {
        <div class="col-2" style="font-weight:700;">@(Block.Left.ToUpper())</div>
        <div class="col-10">
            <BlockCenterLineComponent Animate="Animate" DelayPerItem="DelayPerCharacter" Font="CenterFont" Text="@Block.Center"></BlockCenterLineComponent>
        </div>
    }
    else if (Block.Center != null && Block.Right != null)
    {
        <div class="col-2"></div>
        <div class="col-7">
            <BlockCenterLineComponent Animate="Animate" DelayPerItem="DelayPerCharacter" Font="CenterFont" Text="@Block.Center"></BlockCenterLineComponent>
        </div>
        <div class="col-3" style="font-weight:300; font-size:@(DefaultFontSettings.TheFontSize -2)pt;">@(ShowRightSide ? $"[{Block.Right}]" : "")</div>
    }

    else if (Block.Center != null)
    {
        <div class="col-2"></div>
        <div class="col-10">
            <BlockCenterLineComponent Animate="Animate" DelayPerItem="DelayPerCharacter" Font="CenterFont" Text="@Block.Center"></BlockCenterLineComponent> 
        </div>
    }
    else if (Block.FullLine != null)
    {
        <div class="col-12">
            <BlockCenterLineComponent Animate="Animate" DelayPerItem="DelayPerCharacter" Font="CenterFont" Text="@Block.FullLine"></BlockCenterLineComponent>
        </div>
    }
    else if (Block.ListItem != null)
    {
        <div class="col-12">
            <BlockCenterLineComponent Animate="Animate" DelayPerItem="DelayPerCharacter" Font="CenterFont" Text="@Block.ListItem"></BlockCenterLineComponent>
        </div>
    }
    else if (Block.CenterListItem != null)
    {
        <div class="col-3"></div>
        <div class="col-9">
            <BlockCenterLineComponent Animate="Animate" DelayPerItem="DelayPerCharacter" Font="CenterFont" Text="@Block.CenterListItem"></BlockCenterLineComponent>
        </div>
    }



</div>