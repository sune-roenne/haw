@code {
    [Parameter]
    public bool IsPimped { get; set; }

    [Parameter]
    public int Size { get; set; }

    [Inject]
    public IFileDownloadInitiator DownloadInitiater { get; set; }

    private void OnDownloadClicked()
    {
        var (resourceUrl, fileName) = IsPimped ? (SitePersistenceConstants.SitePdfPimpedResourceUri, "AngelaAndJohnForever.pdf") : (SitePersistenceConstants.SitePdfPublishedResourceUri, "AngelaAndJohnForever_plain.pdf");
        _ = DownloadInitiater.StartDownload(resourceUrl, fileName);
    }


}
